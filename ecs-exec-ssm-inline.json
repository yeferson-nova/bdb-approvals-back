{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "AllowGetParametersOnApprovalsPath",
      "Effect": "Allow",
      "Action": [
        "ssm:GetParameter",
        "ssm:GetParameters",
        "ssm:GetParametersByPath"
      ],
      "Resource": "arn:aws:ssm:us-east-1:423930895328:parameter/bdb/approvals/*"
    },
    {
      "Sid": "AllowDecryptForSSMSecureParametersOnly",
      "Effect": "Allow",
      "Action": "kms:Decrypt",
      "Resource": "*",
      "Condition": {
        "StringEquals": { "kms:ViaService": "ssm.us-east-1.amazonaws.com" }
      }
    }
  ]
}
